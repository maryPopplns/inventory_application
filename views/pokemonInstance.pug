extends layout
block content
  main.pokemonInstance
    header
      h3=name
    div.infoContainer
      div.stats
        div
          p ID:
          p=pokeid
        div
          p Height:
          p=height
        div
          p Weight:
          p=weight
        div
          p HP:
          p=stats.hp
        div
          p Attack:
          p=stats.attack
        div
          p Defense:
          p=stats.defence
        div
          p Special Attack:
          p=stats['special-attack']
        div
          p Special Defense:
          p=stats['special-defense']
        div
          p Speed:
          p=stats.speed
      div.moves
        div.slider.movesSlider
          p Moves
          div.arrowImageWrapper
            img(src='/images/downArrow.svg')
        div.content.movesContent
          ul
            each move in moves
              p=move.name
      div.types
        div.slider.typesSlider
          p Types
          div.arrowImageWrapper
            img(src='/images/downArrow.svg')
        div.content.typesContent
          ul
            each pokeType in pokeTypes
              p=pokeType.name